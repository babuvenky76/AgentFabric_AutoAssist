{
  "id": null,
  "uid": "autoassist-main",
  "title": "AutoAssist Monitoring Dashboard",
  "tags": ["autoassist", "llm", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "targets": [
        {
          "expr": "autoassist_requests_total",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Total Errors",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "targets": [
        {
          "expr": "autoassist_errors_total",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 1, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Success Rate",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "targets": [
        {
          "expr": "autoassist_success_rate",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 80, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Average Latency",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "targets": [
        {
          "expr": "autoassist_request_latency_ms",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 30000, "color": "yellow"},
              {"value": 60000, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Request Rate (per minute)",
      "type": "timeseries",
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "targets": [
        {
          "expr": "rate(autoassist_requests_total[1m]) * 60",
          "refId": "A",
          "legendFormat": "Requests/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 6,
      "title": "Latency Over Time",
      "type": "timeseries",
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "targets": [
        {
          "expr": "autoassist_request_latency_ms",
          "refId": "A",
          "legendFormat": "Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          },
          "unit": "ms"
        }
      }
    }
  ]
}
